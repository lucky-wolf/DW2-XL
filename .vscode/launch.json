	"version": "0.2.0",
	"configurations": [
		{
			"name": "XML Tree",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/xmltree/main.go",
			"output": "code/bin/xmltree.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/Governments_Dhayut.xml",
				"-target",
				"temp/Governments_Dhayut.xml"
			]
		},
		{
			"name": "Adjust Hangar Bays",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/xmltree/main.go",
			"output": "code/bin/xmltree.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ShipHulls_Dhayut.xml",
				"-target",
				"temp/ShipHulls_Dhayut.xml",
				"-algorithm",
				"HangarBays",
				"-quiet"
			]
		},
		{
			"name": "FighterShields",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/xmltree/main.go",
			"output": "code/bin/xmltree.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ComponentDefinitions_Quameno.xml",
				"-target",
				"temp/ComponentDefinitions_Quameno.xml",
				"-algorithm",
				"FighterShields",
				// "-quiet"
			]
		},
		{
			"name": "Replace Quameno Ship Hulls",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/replace/main.go",
			"output": "code/bin/replace.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-target",
				"XL/ShipHulls_Quameno.xml",
				"-script",
				"FixHulls.txt"
			]
		},
		{
			"name": "Armors",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/armors/main.go",
			"output": "code/bin/armors.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ComponentDefinitions.xml",
				"-target",
				"temp/ComponentDefinitions.xml",
				"-script",
				"XL Armor.csv",
			]
		},
	]
}