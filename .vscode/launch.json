	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${fileDirname}",
			// "cwd": "${workspaceFolderBasename}"
		},
		{
			"name": "Replace",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/replace/main.go",
			"output": "code/bin/replace.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-target",
				"XL/ShipHulls_Gizurean.xml",
				"-script",
				"FixHulls.txt"
			]
		},
		{
			"name": "Armors",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/armors/main.go",
			"output": "code/bin/armors.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ComponentDefinitions.xml",
				"-target",
				"temp/ComponentDefinitions.xml",
				"-script",
				"XL Armor.csv",
			]
		},
		{
			"name": "XML",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "code/cmd/xml/main.go",
			"output": "code/bin/xml.exe",
			"cwd": "${workspaceFolder}",
			"args": [
				"-source",
				"XL/ShipHulls_Dhayut.xml",
				"-target",
				"temp/ShipHulls_Dhayut.xml"
			]
		}
	]
}